%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Making the Title, with definitions for date, abstract etc %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\def\maketitle{
\begin{center}
{\Large\sc \@title \par}        % Set title in \Large size.
\vskip 2em                  % Vertical space after title.
{\large\sc   \@firstauthors \par}
\vskip 1em                  % Vertical space after author.
{\it \@firstaddress\\[.5em] }
\vskip 1em                  % Vertical space after title.
{\large\sc   \@secondauthors \par}
\vskip 1em                  % Vertical space after author.
{\it \@secondaddress\\[.5em] }
\vskip 1em                  % Vertical space after title.
\end{center} \par
}

\def\faketitle{
\begin{center}
{\Large\sc \@title \par}        % Set title in \Large size.
\vskip 2em                  % Vertical space after title.
{\large\sc   \@firstauthors \par}
\vskip 1em                  % Vertical space after author.
{\it \@firstaddress\\[.5em] }
\vskip 1em                  % Vertical space after title.
\end{center} \par
}

\def\firstaddress#1{\def\@firstaddress{#1}}
\def\firstauthors#1{\def\@firstauthors{#1}}

\def\secondaddress#1{\def\@secondaddress{#1}}
\def\secondauthors#1{\def\@secondauthors{#1}}

\def\abstracts#1{
\centering{\begin{minipage}{5.83truein}
\small
\parindent=0pt #1\par
\end{minipage}}
\vskip 2em \par}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Margins, textwidths, indentations etc %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\twocolumn
\sloppy
\flushbottom
\parindent 1em
\leftmargini 2em
\leftmarginv .5em
\leftmarginvi .5em
\oddsidemargin -2pc
\evensidemargin -1pc
\marginparwidth .75in
\marginparsep 7pc
\columnsep 0.4in
\topmargin=-40\p@
\headheight=12\p@
\headsep=12\p@
\footskip=12\p@
\footheight=12\p@
\textheight = 9in
\advance\textheight by \topskip
\textwidth 7.2in
\def\section{\@startsection {section}{1}{\z@}{-3.5ex plus -1ex minus
-.2ex}{2.3ex plus .2ex}{\bf }}
\def\subsection{\@startsection{subsection}{2}{\z@}{-3.25ex plus -1ex minus
-.2ex}{1.5ex plus .2ex}{\it }}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
